<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My List</title>
    <link href="/css/list.css" rel="stylesheet" type="text/css">
</head>
<body>

  <img id="list-bg" src="/css/images/brave-movie.png" alt="movie image">
  
  
  <%- include('../partials/_navbar.ejs') %>
  
  <div id="elements-container">

      <a href="/users/<%=user._id%>/movies">
        <img id="back-button-image" src="/css/images/back-button.png" alt="back button">
      </a>

    <h1 id="list-title"><%= user.username %>'s <br>watchlist</br></h1>

  <div id="movies">
    <ul>
        <% movies.forEach((movie)=>{ %>
        <li>
          <label id="container">
          <a href="/users/<%= user._id %>/movies/<%= movie._id %>">
            <%= movie.name %> 
          </a>
          <input id="checkbox" type="checkbox" name="movie-checkbox-<%= movie._id %>">
          <span class="checkmark"></span>
        </label>
        </li>
        <% }) %>
      </ul>

    </div>

    <a href="/users/<%=user._id%>/movies/new">
          <img id="add-button-image" src="/css/images/add-button-image.png" alt="add button image">
        </button>
    </a>

  </div>
</body>
</html>